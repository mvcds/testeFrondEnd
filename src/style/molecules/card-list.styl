card-list()
  @media (min-width --mobile-size)
    reset(0 (--base-size * 3) (--base-size * 3))
    display grid
    grid-template-columns 1fr 1fr
    grid-gap --base-size * 2

  &__content
    reset(--base-size (--base-size * 3))

  &__title
    margin 0 0 (--base-size) 0

  &__text
    font-size 15px
    line-height 1.8
    text-align justify
    color --mine-shaft-color
    margin (--base-size) 0

@media (max-width --mobile-size - 1)
  .card-item
      & + &
        margin-top --base-size * 2
