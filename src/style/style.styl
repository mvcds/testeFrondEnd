--base-size=8px
--text-color=#333333
--discrete-text-color=#3D383B
--button-color=#FFFFFF
--primary-color=#AC5908
--mobile-size=415px
--tablet-size=1024px

body
  font-family OpenSans
  font-weight normal
  font-style normal
  font-stretch normal
  letter-spacing normal
  color --text-color
  padding 0
  margin 0

#banner
  display flex
  flex-direction column
  align-items center
  background-image url("assets/bg-topo@3x.jpg")

  @media (max-width --mobile-size)
    background-image url("assets/bg-topo.jpg")

  @media (max-width --tablet-size)
    background-image url("assets/bg-topo@2x.jpg")

#logo
  text-align center

#logo img
  width 50%

#promotion-regulament-note
  font-family PetalaPro
  font-size 12px
  line-height 0.17
  text-align right
  color --discrete-text-color
  width 100%
  margin-top --base-size * 4

.button
  border-radius 4px
  background-color --primary-color
  color --button-color
  font-family PetalaPro
  line-height 2
  font-size 16.3px
  text-align center
  text-transform uppercase
  text-decoration none
  width 100%
  padding --base-size
  box-sizing border-box

.reset
  padding --base-size * 2
  margin 0
