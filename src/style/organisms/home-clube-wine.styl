#home--clube-wine
  background-color --white-color

  @media (max-width --mobile-large-size - 1)
    padding-bottom --base-size * 2

  h1
    reset(--base-size * 2)
    color --meteor-color

  .club-wine__card
    card-list()

    &__item
      border-radius 10px
      box-shadow 2.6px 3.1px 8px 0 #00000019
    &__image
      img
        width 100%

    &__title
      font-size 18px
      font-weight bold
      line-height 1.44
      text-align left
      color --sun-color

    &__separator
      height 1px
      background-color #D0D0D0
